# ACPI Keys
bindsym XF86MonBrightnessDown exec --no-startup-id exec xbacklight -10
bindsym XF86MonBrightnessUp exec --no-startup-id exec xbacklight +10
bindsym XF86AudioRaiseVolume exec --no-startup-id exec pactl set-sink-volume @DEFAULT_SINK@ +3%
bindsym XF86AudioLowerVolume exec --no-startup-id exec pactl -- set-sink-volume @DEFAULT_SINK@ -3%
bindsym XF86AudioMute exec --no-startup-id exec pactl set-sink-mute @DEFAULT_SINK@ toggle
bindsym XF86AudioMicMute exec --no-startup-id exec pactl set-source-mute @DEFAULT_SOURCE@ toggle
# If no ACPI keys present
bindsym Ctrl+equal exec --no-startup-id exec pactl set-sink-volume @DEFAULT_SINK@ +3%
bindsym Ctrl+minus exec --no-startup-id exec pactl -- set-sink-volume @DEFAULT_SINK@ -3%

