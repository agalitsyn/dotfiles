# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ÃŸ
# If the above line is not correctly displayed, fix your editor first!

general {
        output_format = "i3bar"
        colors = true
        interval = 5
}

order += "wireless wlan0"
order += "ethernet eth0"
order += "battery 0"
order += "battery 1"
order += "tztime sanfran"
order += "tztime montana"
order += "tztime munich"
order += "tztime local"

wireless wlan0 {
        format_up = "wifi (%quality at %essid) %ip"
        format_down = "wifi down"
}

ethernet eth0 {
        format_up = "eth (%speed) %ip"
        format_down = "eth down"
}

battery 0 {
        format = "%status0 %percentage %remaining"
        last_full_capacity = true
        integer_battery_capacity = true
        low_threshold = 11
        threshold_type = percentage
}

battery 1 {
        format = "%status1 %percentage %remaining"
        last_full_capacity = true
        integer_battery_capacity = true
        low_threshold = 11
        threshold_type = percentage
}

tztime local {
        format = "%b %d %H:%M:%S NSK"
}

tztime montana {
        format = "%b %d %H:%M:%S MNT"
        timezone = "MST7MDT"
}

tztime sanfran {
        format = "%b %d %H:%M:%S SF"
        timezone = "PST8PDT"
}

tztime munich {
        format = "%b %d %H:%M:%S GER"
        timezone = "CET"
}

