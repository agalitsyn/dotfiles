{
  "icon_theme": "Bearded Icon Theme",
  "vim_mode": false,
  "relative_line_numbers": false,
  "cursor_blink": false,
  "scrollbar": {
    "show": "auto"
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "theme": {
    "mode": "system",
    "light": "Gruvbox Light Soft",
    "dark": "Gruvbox Dark"
  },
  "auto_reveal_entries": true,
  "project_panel": {
    "auto_fold_dirs": false,
    "auto_reveal_entries": true
  },
  "preferred_line_length": 140,
  "soft_wrap": "editor_width",
  "use_autoclose": false,
  "features": {
    "edit_prediction_provider": "zed"
  },
  "assistant": {
    "profiles": {
      "ask": {
        "name": "Ask",
        "tools": {
          "contents": true,
          "diagnostics": true,
          "fetch": true,
          "list_directory": false,
          "now": true,
          "path_search": true,
          "read_file": true,
          "regex_search": true,
          "thinking": true,
          "batch_tool": false
        },
        "enable_all_context_servers": false,
        "context_servers": {}
      },
      "write": {
        "name": "Write",
        "tools": {
          "open": true,
          "create_directory": true,
          "terminal": true,
          "batch_tool": true,
          "code_actions": true,
          "code_symbols": true,
          "contents": true,
          "copy_path": true,
          "create_file": true,
          "delete_path": false,
          "diagnostics": true,
          "find_replace_file": true,
          "fetch": true,
          "list_directory": true,
          "move_path": false,
          "now": true,
          "path_search": true,
          "read_file": true,
          "regex_search": true,
          "rename": true,
          "symbol_info": true,
          "thinking": true
        },
        "enable_all_context_servers": true,
        "context_servers": {}
      }
    },
    "default_profile": "write",
    "always_allow_tool_actions": false,
    "enable_experimental_live_diffs": true,
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-3-7-sonnet-latest"
    },
    "version": "2"
  },
  "context_servers": {
    "mcp-server-brave-search": {
      "settings": {
        "brave_api_key": ""
      }
    }
  },
  "preview_tabs": {
    "enabled": false,
    "enable_preview_from_file_finder": false,
    "enable_preview_from_code_navigation": false
  },
  "tabs": {
    "git_status": true,
    "file_icons": true,
    "show_close_button": "hover"
  },
  "tab_bar": {
    "show": true,
    "show_nav_history_buttons": false
  },
  "excluded_patterns": ["**/__pycache__"],
  "file_scan_exclusions": [
    "**/.git",
    "**/.venv",
    "**/node_modules",
    "**/dist",
    "**/build",
    "**/target",
    "**/.rope*",
    "**/*_cache",
    "**/__pycache__",
    "**/.*-version",
    "**/.DS_Store"
  ],
  "base_keymap": "VSCode",
  "autosave": "on_focus_change",
  "buffer_font_size": 15.3,
  "buffer_font_family": "Victor Mono",
  "buffer_font_weight": 400,
  "buffer_line_height": "comfortable",
  "ui_font_family": "Zed Plex Sans",
  "ui_font_size": 16,
  "confirm_quit": true,
  "git": {
    "git_gutter": "tracked_files",
    "inline_blame": {
      "enabled": true
    }
  },
  "inlay_hints": {
    "enabled": false
  },
  "indent_guides": {
    "enabled": true,
    "coloring": "indent_aware"
  },
  "show_edit_predictions": true,
  "collaboration_panel": {
    "button": false
  },
  "auto_signature_help": true,
  "lsp": {
    "pyright": {
      "settings": {
        "python.analysis": {
          "diagnosticMode": "workspace",
          "typeCheckingMode": "strict"
        },
        "python": {
          "pythonPath": ".venv/bin/python"
        }
      }
    },
    "gopls": {
      "initialization_options": {
        "gofumpt": true,
        "usePlaceholders": true,
        "staticcheck": true,
        "codelenses": {
          "gc_details": true,
          "generate": true,
          "regenerate_cgo": true,
          "tidy": true,
          "upgrade_dependency": true,
          "vendor": true
        },
        "hints": {
          "assignVariableTypes": true,
          "compositeLiteralFields": true,
          "compositeLiteralTypes": true,
          "constantValues": true,
          "functionTypeParameters": true,
          "parameterNames": true,
          "rangeVariableTypes": true
        }
      }
    }
  },
  "languages": {
    "HTML": {
      "tab_size": 2,
      "format_on_save": "off"
    },
    "CSS": {
      "tab_size": 2
    },
    "JavaScript": {
      "tab_size": 2
    },
    "Python": {
      "language_servers": ["pyright", "ruff"],
      "format_on_save": "on",
      "formatter": [
        {
          "code_actions": {
            "source.organizeImports.ruff": true,
            "source.fixAll.ruff": true
          }
        },
        {
          "language_server": {
            "name": "ruff"
          }
        }
      ]
    },
    "YAML": {
      "format_on_save": "off"
    }
  }
}
