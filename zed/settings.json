{
  "theme": {
    "mode": "system",
    "light": "Cyberdream light",
    "dark": "Cyberdream dark"
  },
  "auto_reveal_entries": true,
  "auto_fold_dirs": false,
  "soft_wrap": "none",
  "preferred_line_length": 140,
  "use_autoclose": false,
  "features": {
    "inline_completion_provider": "none"
  },
  "assistant": {
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-3-5-sonnet-20240620"
    },
    "version": "2"
  },
  "preview_tabs": {
    "enabled": false,
    "enable_preview_from_file_finder": false,
    "enable_preview_from_code_navigation": false
  },
  "tabs": {
    "file_icons": true
  },
  "vim_mode": false,
  "excluded_patterns": ["**/__pycache__"],
  "file_scan_exclusions": ["**/.git", "**/.svn", "**/.hg", "**/.DS_Store", "**/Thumbs.db", "**/__pycache__"],
  "base_keymap": "VSCode",
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "autosave": "on_window_change",
  "ui_font_size": 16,
  "buffer_font_size": 17,
  "buffer_font_family": "Iosevka",
  "confirm_quit": true,
  "git": {
    "git_gutter": "tracked_files",
    "inline_blame": {
      "enabled": true
    }
  },
  "lsp": {
    "pyright": {
      "settings": {
        "python.analysis": {
          "diagnosticMode": "workspace",
          "typeCheckingMode": "strict"
        },
        "python": {
          "pythonPath": ".venv/bin/python"
        }
      }
    }
  },
  "languages": {
    "HTML": {
      "tab_size": 2,
      "format_on_save": "off"
    },
    "CSS": {
      "tab_size": 2
    },
    "JavaScript": {
      "tab_size": 2
    },
    "Python": {
      "language_servers": ["pyright", "ruff"],
      "format_on_save": "on",
      "formatter": [
        {
          "code_actions": {
            "source.organizeImports.ruff": true,
            "source.fixAll.ruff": true
          }
        },
        {
          "language_server": {
            "name": "ruff"
          }
        }
      ]
    }
  }
}
