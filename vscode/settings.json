{
  // Updates
  "update.mode": "start",
  "extensions.autoUpdate": false,
  "telemetry.telemetryLevel": "off",
  "extensions.ignoreRecommendations": true,
  "redhat.telemetry.enabled": false,

  // Term
  "terminal.external.osxExec": "iTerm.app",
  "terminal.external.linuxExec": "x-terminal-emulator",
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.fontWeight": "normal",
  "terminal.integrated.scrollback": 10000,
  "terminal.integrated.persistentSessionScrollback": 300,
  "terminal.integrated.copyOnSelection": true,
  "terminal.integrated.hideOnStartup": "always",
  "terminal.integrated.cursorStyle":"block",
  "terminal.integrated.cursorStyleInactive":"outline",

  // Files
  "files.associations": {
    "Vagrantfile": "ruby",
    "**/*.html": "html",
    "**/requirements{/**,*}.{txt,in}": "pip-requirements",
    "**/*.j2": "jinja",
    "**/*.jinja2": "jinja"
  },
  "files.exclude": {
    "**/__pycache__": true
  },
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,
  "files.autoSave": "onFocusChange",
  "explorer.confirmDragAndDrop": false,
  "explorer.confirmDelete": false,

  // Search
  "search.exclude": {
    "**/.git": true,
    "**/node_modules": true,
    "**/dist": true
  },

  // Editor look and feel
  "window.title": "${activeEditorFull}${separator}${rootName}",
  "window.titleBarStyle": "custom",
  "window.autoDetectColorScheme": true,
  "workbench.colorTheme": "poimandres-noitalics-storm",
  "workbench.preferredLightColorTheme": "Default Light Modern",
  "workbench.preferredDarkColorTheme": "poimandres-noitalics-storm",
  "window.nativeTabs": true,
  "window.commandCenter": false,
  "workbench.startupEditor": "none",
  "workbench.editor.highlightModifiedTabs": true,
  "workbench.list.openMode": "doubleClick",
  "workbench.editor.limit.enabled": true,
  "workbench.editor.limit.perEditorGroup": true,
  "workbench.editor.limit.value": 10,
  "workbench.iconTheme": "quill-icons-minimal",
  "workbench.productIconTheme": "icons-carbon",
  "workbench.editorAssociations": {
    "*.ipynb": "jupyter.notebook.ipynb"
  },
  "workbench.tree.expandMode": "doubleClick",
  "workbench.layoutControl.enabled": false,
  "workbench.settings.editor": "json",
  "workbench.colorCustomizations": {
    "editorInlayHint.background": "#252b37",
    "editorInlayHint.foreground": "#676b81",
  },

  "problems.decorations.enabled": false,
  "editor.fontFamily": "'Julia Mono', 'JetBrains Mono', 'Cascadia Code', 'Fira Code', 'IBM Plex Mono', 'Input Mono', 'Source Code Pro'",
  "editor.fontSize": 14,
  "editor.fontLigatures": true,
  "editor.find.seedSearchStringFromSelection": "selection",
  "editor.scrollBeyondLastLine": false,
  "editor.tabSize": 4,
  "editor.useTabStops": true,
  "editor.snippetSuggestions": "top",
  "editor.formatOnSave": false,
  "editor.formatOnSaveMode": "file",
  "editor.formatOnPaste": false,
  "editor.renderWhitespace": "selection",
  "editor.find.cursorMoveOnType": true,
  "editor.rulers": [120],
  "editor.minimap.enabled": false,
  "editor.linkedEditing": true,
  "editor.unicodeHighlight.ambiguousCharacters": false,
  "editor.bracketPairColorization.enabled": false,
  "editor.autoClosingBrackets": "never",
  "editor.autoClosingOvertype": "never",
  "editor.autoClosingQuotes": "never",
  "editor.suggest.insertMode": "replace",
  "editor.codeActionsOnSave": {}, // setup per language
  "editor.inlayHints.enabled": "on",

  // Markdown
  "markdown.editor.pasteUrlAsFormattedLink.enabled": "smart",

  // Git
  "git.autofetch": true,
  "git.enableSmartCommit": true,
  "git.confirmSync": false,
  "git.mergeEditor": true,

  // Diff
  "diffEditor.experimental.showMoves": true,
  "diffEditor.renderSideBySide": true,
  "diffEditor.hideUnchangedRegions.enabled": true,

  // Gitlens
  "gitlens.hovers.currentLine.over": "line",
  "gitlens.codeLens.enabled": false,
  "gitlens.showWelcomeOnInstall": false,
  "gitlens.showWhatsNewAfterUpgrades": false,

  // Go
  // https://github.com/golang/tools/blob/master/gopls/doc/vscode.md
  "go.useLanguageServer": true,
  // "go.inlayHints.functionTypeParameters": true,
  // "go.inlayHints.parameterNames": true,

  "gopls": {
      "ui.semanticTokens": true,
      // "ui.completion.usePlaceholders": true,
      "formatting.gofumpt": true,
  },
  "[go]": {
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": true
    },
    // Optional: Disable snippets, as they conflict with completion ranking.
    // "editor.snippetSuggestions": "bottom"
  },
  "[go.mod]": {
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": true
    }
  },
  "go.buildOnSave": "package",
  "go.lintOnSave": "package",
  "go.vetOnSave": "package",
  "go.buildTags": "",
  "go.buildFlags": [],
  "go.lintTool": "golangci-lint",
  "go.lintFlags": [],
  "go.vetFlags": [],
  "go.addTags": {
    "tags": "json",
    "options": "json=omitempty",
    "promptForTags": true,
    "transform": "snakecase"
  },
  "go.coverOnSave": false,
  "go.useCodeSnippetsOnFunctionSuggest": false,
  "go.gopath": "~",
  "go.gocodeAutoBuild": false,

  // "go.formatTool": "custom",
  // "go.alternateTools": {
  //   "customFormatter": "goimports-reviser"
  // },

  "emeraldwalk.runonsave": {
    "commands": [
        {
            "match": "\\.go$",
            "cmd": "golines ${file} --write-output --max-len=120"
        }
    ]
  },

  // Python
  "[python]": {
    "editor.formatOnSave": true
  },
  "python.languageServer": "Pylance",
  "python.analysis.typeCheckingMode": "basic",
  // https://github.com/microsoft/vscode-python/wiki/Migration-to-Python-Tools-Extensions
  "python.linting.lintOnSave": true,
  "python.linting.prospectorEnabled": true,
  "python.linting.prospectorPath": "prospector",
  "python.linting.prospectorArgs": [
    "--max-line-length",
    "120",
    "--ignore-paths",
    ".venv"
  ],
  "python.formatting.provider": "black",
  "python.formatting.blackPath": "black",
  "python.formatting.blackArgs": ["--line-length", "120"],

  // Frontend
  "auto-close-tag.enableAutoCloseTag": true,
  "auto-close-tag.activationOnLanguage": [
    "html",
    "vue",
    "typescriptreact",
    "javascriptreact",
    "jinja",
    "jinja-html",
    "django-html",
    "phoenix-heex",
  ],
  "emmet.includeLanguages": {
    "jinja": "html",
    "jinja-html": "html",
    "django-html": "html",
    "phoenix-heex": "html",
  },
  "emmet.triggerExpansionOnTab": true,
  "emmet.showSuggestionsAsSnippets": true,

  "tailwindCSS.includeLanguages": {
    "jinja": "html",
    "jinja-html": "html",
    "django-html": "html",
    "phoenix-heex": "html",
    "elixir": "html",
  },

  "[html]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jinja]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "monosans.djlint",
  },
  "[jinja-html]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "monosans.djlint",
  },
  "[django-html]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "monosans.djlint",
  },
  "[css]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[vue]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "volar.inlayHints.eventArgumentInInlineHandlers": false,
  "[javascriptreact]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // Vim
  // https://github.com/Microsoft/vscode/issues/23991
  "keyboard.dispatch": "keyCode",
  "vim.disableExtension": true,
  "vim.leader": "<space>",
  "vim.autoSwitchInputMethod.enable": true,
  "vim.autoSwitchInputMethod.defaultIM": "com.apple.keylayout.US",
  "vim.autoSwitchInputMethod.obtainIMCmd": "/opt/homebrew/bin/im-select",
  "vim.autoSwitchInputMethod.switchIMCmd": "/opt/homebrew/bin/im-select {im}",
  "vim.easymotion": true,
  "vim.incsearch": true,
  "vim.useSystemClipboard": true,
  "vim.useCtrlKeys": true,
  "vim.hlsearch": true,
  "vim.sneak": true,
  "vim.normalModeKeyBindings": [
    {
      "before": ["<leader>", "b"],
      "commands": ["goToNextReference"]
    },
    {
      "before": ["<leader>", "/"],
      "commands": ["editor.action.commentLine"]
    },
    //   "before": ["<tab>"],
    //   "commands": ["workbench.action.nextEditorInGroup"]
    // },
    // {
    //   "before": ["<S-tab>"],
    //   "commands": ["workbench.action.previousEditorInGroup"]
    // },
    {
      "before": ["<C-l>"],
      "commands": ["workbench.action.navigateRight"]
    },
    {
      "before": ["<C-h>"],
      "commands": ["workbench.action.navigateLeft"]
    },
    {
      "before": ["<C-j>"],
      "commands": ["workbench.action.navigateDown"]
    },
    {
      "before": ["<C-k>"],
      "commands": ["workbench.action.navigateUp"]
    },
    {
      "before": ["<leader>", "]"],
      "commands": ["workbench.action.navigateForward"]
    },
    {
      "before": ["<leader>", "["],
      "commands": ["workbench.action.navigateBack"]
    },
    {
      "before": ["<leader>", "backspace"],
      "commands": ["workbench.action.navigateToLastEditLocation"]
    }
  ],
  "vim.insertModeKeyBindings": [
    {
      "before": ["j", "k"],
      "after": ["<Esc>"]
    },
    {
      "before": ["<C-j>"],
      "after": ["<Esc>"]
    },
    {
      "before": ["<C-k>"],
      "after": ["<Esc>"]
    }
  ],
  "vim.visualModeKeyBindings": [
    {
      "before": [">"],
      "after": [">", "g", "v"]
    },
    {
      "before": ["<"],
      "after": ["<", "g", "v"]
    },
    {
      "before": ["<leader>", "/"],
      "commands": ["editor.action.commentLine"]
    }
  ],
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["<leader>", "d"],
      "after": ["d", "d"]
    },
    {
      "before": ["<C-/>"],
      "commands": [":nohl"]
    },
    {
      "before": ["<leader>", "e"],
      "commands": ["workbench.action.toggleSidebarVisibility"]
    },
    {
      "before": ["<leader>", "f"],
      "commands": ["revealInExplorer"]
    }
  ],
  "go.toolsManagement.autoUpdate": true,
  "workbench.editor.showTabs": "multiple",
  "terminal.integrated.tabStopWidth": 4,
  "explorer.openEditors.visible": 1,
  "workbench.editor.enablePreview": false,
}
