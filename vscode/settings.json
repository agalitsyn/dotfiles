{
  // Debugger
  "debug.allowBreakpointsEverywhere": true,
  "debug.javascript.codelens.npmScripts": "never",
  "debug.console.closeOnEnd": true,

  // Updates and security
  "update.mode": "start",
  "telemetry.telemetryLevel": "off",
  "extensions.ignoreRecommendations": true,
  "redhat.telemetry.enabled": false,
  "security.workspace.trust.enabled": false,

  // Term
  "terminal.external.osxExec": "Ghostty.app",
  "terminal.external.linuxExec": "x-terminal-emulator",
  "terminal.integrated.defaultLocation": "editor",
  "terminal.integrated.fontFamily": "IosevkaTerm Nerd Font Mono",
  "terminal.integrated.fontWeight": "normal",
  "terminal.integrated.fontSize": 16,
  "terminal.integrated.scrollback": 100000,
  "terminal.integrated.persistentSessionScrollback": 10000,
  "terminal.integrated.copyOnSelection": true,
  "terminal.integrated.hideOnStartup": "always",
  "terminal.integrated.cursorStyle": "block",
  "terminal.integrated.cursorStyleInactive": "outline",
  "terminal.integrated.tabStopWidth": 4,
  "terminal.integrated.enableMultiLinePasteWarning": "never",
  "terminal.integrated.sendKeybindingsToShell": true,
  "terminal.integrated.shellIntegration.enabled": false,
  "terminal.integrated.shellIntegration.decorationsEnabled": "never",
  "terminal.integrated.stickyScroll.enabled": false,
  "terminal.integrated.suggest.enabled": false,
  "terminal.integrated.defaultProfile.osx": "zsh",
  "terminal.integrated.defaultProfile.linux": "zsh",
  "accessibility.signals.terminalBell": {
    "sound": "off",
    "announcement": "off",
  },
  "terminal.integrated.enableVisualBell": false,
  "terminal.integrated.fontLigatures.enabled": false,

  // Files
  "files.associations": {
    "Vagrantfile": "ruby",
    "**/requirements{/**,*}.{txt,in}": "pip-requirements",
  },
  "files.exclude": {
    "**/__pycache__": true,
    "**/*.pyc": true
  },
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,
  "files.autoSave": "onFocusChange",
  "files.defaultLanguage": "plaintext",

  // Explorer
  "explorer.openEditors.visible": 1,
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.decorations.badges": false,
  "explorer.autoReveal": true,
  "explorer.enableUndo": true,
  "explorer.incrementalNaming": "smart",
  "explorer.compactFolders": false,

  // Search
  "search.quickOpen.history.filterSortOrder": "recency",
  "search.exclude": {
    "**/__pycache__": true,
    "**/*.pyc": true,
    "**/.git": true,
    "**/node_modules": true,
    "**/.nuxt": true,
    "**/.next": true,
    "**/.venv": true,
    "**/vendor": true
  },

  // Editors per split
  "workbench.editor.limit.enabled": true,
  "workbench.editor.limit.perEditorGroup": true,
  "workbench.editor.limit.value": 10,
  "workbench.editor.enablePreview": false,
  "workbench.editor.showTabs": "multiple",

  // Editor look and feel
  "window.zoomLevel": 0.0,
  "window.nativeTabs": false,
  "window.title": "${rootName}${separator}${activeEditorMedium}",
  "window.titleBarStyle": "custom",
  "window.customTitleBarVisibility": "windowed",
  "window.confirmBeforeClose": "never",
  "window.density.editorTabHeight": "compact",
  "window.autoDetectColorScheme": true,

  "workbench.startupEditor": "newUntitledFile",
  "workbench.list.openMode": "doubleClick",
  "workbench.tree.expandMode": "doubleClick",
  "workbench.settings.editor": "json",
  "workbench.colorTheme": "Default Dark Modern",
  "workbench.tree.enableStickyScroll": false,
  "workbench.tree.renderIndentGuides": "none",
  "workbench.editor.highlightModifiedTabs": true,
  "workbench.editor.showIcons": false,
  "workbench.editor.enablePreviewFromQuickOpen": true,
  "problems.decorations.enabled": false,
  "workbench.navigationControl.enabled": false,
  "workbench.layoutControl.enabled": false,
  "workbench.tips.enabled": false,
  "workbench.preferredLightColorTheme": "Night Owl Light (No Italics)",

  "editor.fontSize": 17,
  "editor.fontWeight": 400,
  "editor.fontFamily": "'Iosevka Fixed', 'Martian Mono Nr Lt', 'JetBrains Mono', 'Cascadia Code', 'Fira Code', 'IBM Plex Mono', 'Input Mono', 'Source Code Pro'",

  "editor.find.seedSearchStringFromSelection": "selection",
  "editor.scrollBeyondLastLine": false,
  "editor.lineHeight": 1.4,
  "editor.lineNumbers": "on",
  "editor.tabSize": 4,
  "editor.insertSpaces": true,
  // When opening a file, `editor.tabSize` and `editor.insertSpaces`
  // will be detected based on the file contents. Set to false to keep
  // the values you've explicitly set, above.
  // "editor.detectIndentation": false,
  "editor.useTabStops": true,
  "editor.formatOnSave": false,
  "editor.formatOnSaveMode": "file",
  "editor.formatOnPaste": false,
  "editor.codeActionsOnSave": {}, // setup per language
  "editor.renderWhitespace": "selection",
  "editor.find.cursorMoveOnType": true,
  "editor.rulers": [140],
  "editor.minimap.enabled": false,
  "editor.linkedEditing": true,
  "editor.unicodeHighlight.ambiguousCharacters": false,

  "editor.matchBrackets": "near",
  "editor.bracketPairColorization.enabled": false,
  "editor.bracketPairColorization.independentColorPoolPerBracketType": true,
  "editor.inlayHints.enabled": "on",
  "editor.lightbulb.enabled": "off",
  "editor.snippetSuggestions": "bottom",
  "editor.suggest.insertMode": "replace",
  "editor.accessibilitySupport": "off",
  "editor.quickSuggestionsDelay": 0,
  "editor.scrollbar.horizontal": "hidden",
  "editor.scrollbar.vertical": "auto",
  "editor.semanticHighlighting.enabled": false,
  "editor.stickyScroll.enabled": true,
  "zenMode.showTabs": "none",
  "window.newWindowDimensions": "maximized" ,

  // do not overthink
  "editor.autoClosingBrackets": "never",
  "editor.autoClosingQuotes": "never",
  "editor.autoSurround": "never",
  "editor.autoClosingOvertype": "never",
  "editor.suggestOnTriggerCharacters": false,
  "editor.acceptSuggestionOnCommitCharacter": false,

  // Breadcrumbs
  "breadcrumbs.enabled": false,

  // Markdown
  "markdown.editor.pasteUrlAsFormattedLink.enabled": "smart",

  // Git
  "git.autofetch": true,
  "git.enableSmartCommit": true,
  "git.confirmSync": false,
  "git.mergeEditor": true,
  "git.openRepositoryInParentFolders": "never",

  // Diff
  "diffEditor.experimental.showMoves": true,
  "diffEditor.renderSideBySide": true,
  "diffEditor.hideUnchangedRegions.enabled": true,

  // Gitlens
  "gitlens.showWhatsNewAfterUpgrades": false,
  "gitlens.currentLine.enabled": true,
  "gitlens.statusBar.enabled": false,
  "gitlens.codeLens.enabled": true,
  "gitlens.codeLens.recentChange.enabled": false,
  "gitlens.codeLens.authors.enabled": false,
  "gitlens.hovers.avatars": false,
  "gitlens.hovers.currentLine.over": "line",
  "gitlens.plusFeatures.enabled": false,

  // Go
  // https://github.com/golang/tools/blob/master/gopls/doc/vscode.md
  "go.gopath": "~",
  "go.useLanguageServer": true,
  "go.toolsManagement.autoUpdate": true,
  "go.inlayHints.functionTypeParameters": true,
  // "go.inlayHints.parameterNames": true,
  "gopls": {
    "ui.semanticTokens": true,
    "ui.completion.usePlaceholders": true,
    "formatting.gofumpt": true,
  },
  "[go]": {
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit"
    }
    // Optional: Disable snippets, as they conflict with completion ranking.
    // "editor.snippetSuggestions": "bottom"
  },
  "[go][go.mod]": {
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit"
    }
  },
  "go.addTags": {
    "tags": "json",
    "options": "json=omitempty",
    "promptForTags": true,
    "transform": "snakecase"
  },
  "go.vetOnSave": "package",
  "go.vetFlags": [],
  "go.lintOnSave": "package",
  "go.lintTool": "golangci-lint",
  "go.lintFlags": [],
  "go.coverOnSave": false,
  "go.testEnvFile": "${workspaceFolder}/.env",

  "emeraldwalk.runonsave": {
    "commands": [
      {
        "match": "\\.go$",
        "cmd": "golines ${file} --write-output --max-len=140"
      }
    ]
  },

  // Python
  "python.languageServer": "Pylance",
  "python.analysis.typeCheckingMode": "standard",
  "[python]": {
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.fixAll": "explicit",
      "source.organizeImports": "explicit"
    },
    "editor.defaultFormatter": "charliermarsh.ruff"
  },
  "ruff.lineLength": 140,
  "python.terminal.activateEnvironment": true,

  // HTML and templating languages
  "html.autoClosingTags": true,

  "emmet.triggerExpansionOnTab": true,
  "emmet.showSuggestionsAsSnippets": true,
  "emmet.includeLanguages": {
    "jinja": "html",
    "jinja-html": "html",
    "django-html": "html",
  },

  "indentRainbow.includedLanguages": [
    "html",
    "jinjs",
    "django-html",
    "jinja-html",
    "yaml",
    "dockercompose",
    "vue",
    "tsx",
  ],
  "indentRainbow.indicatorStyle": "light",
  "indentRainbow.lightIndicatorStyleLineWidth": 1,

  "[html]": {
    "editor.defaultFormatter": "vscode.html-language-features"
  },

  "[jinja][jinja-html][django-html]": {
    "editor.formatOnSave": false,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
  },

  "prettier.bracketSameLine": true,
  "prettier.printWidth": 140,

  // CSS
  "[css]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "tailwindCSS.includeLanguages": {
    "jinja": "html",
    "jinja-html": "html",
    "django-html": "html",
  },

  // JavaScript and TypeScript
  "auto-close-tag.enableAutoCloseTag": true,
  "auto-close-tag.activationOnLanguage": [
    "vue",
    "typescriptreact",
    "javascriptreact",
  ],

  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "vue"
  ],

  "[json]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascriptreact]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[vue]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "todohighlight.keywords": [
    "DEBUG",
    {
      "text": "TODO",
      "color": "#000000",
      "backgroundColor": "#A7C7E7",
      "overviewRulerColor": "grey"
    },
    {
      "text": "NOTE:",
      "color": "#ffffff",
      "backgroundColor": "#A7C7E7",
      "overviewRulerColor": "grey"
    },
  ],
  "todohighlight.isCaseSensitive": true,

  // Disable AI/Copilot completely
  "chat.disableAIFeatures": true,
  "github.copilot.enable": {
    "*": false
  },
  "github.copilot.editor.enableAutoCompletions": false,
  "github.copilot.nextEditSuggestions.enabled": false,
  "github.copilot.editor.enableCodeActions": false,
  "github.copilot.renameSuggestions.triggerAutomatically": false,
  "chat.agent.enabled": false,
  "chat.commandCenter.enabled": false,
  "chat.detectParticipant.enabled": false,
  "chat.mcp.discovery.enabled": {
    "claude-desktop": false,
    "windsurf": false,
    "cursor-global": false,
    "cursor-workspace": false
  },
  "inlineChat.mode": "disabled",
  "terminal.integrated.initialHint": false,

  // UI
  "window.commandCenter": false,
  "workbench.editor.editorActionsLocation": "hidden",
  "workbench.activityBar.location": "top",
  "workbench.secondarySideBar.defaultVisibility": "hidden",

  // Claude Code
  "claudeCode.preferredLocation": "sidebar",
  "workbench.preferredDarkColorTheme": "Vesper",
}
