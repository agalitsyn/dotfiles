{
  // Updates
  "update.mode": "start",
  "extensions.autoUpdate": false,
  "telemetry.telemetryLevel": "off",
  "extensions.ignoreRecommendations": true,
  "redhat.telemetry.enabled": false,

  // Term
  "terminal.external.osxExec": "iTerm.app",
  "terminal.external.linuxExec": "x-terminal-emulator",
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.fontWeight": "normal",

  // Files
  "files.associations": {
    "Vagrantfile": "ruby",
    "**/*.html": "html",
    "**/requirements{/**,*}.{txt,in}": "pip-requirements",
    "*.j2": "jinja"
  },
  "files.exclude": {
    "**/__pycache__": true
  },

  // Editor
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,
  "workbench.startupEditor": "none",
  "workbench.editor.enablePreview": false,
  "workbench.editor.highlightModifiedTabs": true,
  "workbench.list.openMode": "doubleClick",
  "workbench.editor.limit.enabled": true,
  "workbench.editor.limit.perEditorGroup": true,
  "workbench.editor.limit.value": 10,
  "workbench.iconTheme": "quill-icons-minimal",
  "workbench.productIconTheme": "icons-carbon",
  "workbench.editorAssociations": {
    "*.ipynb": "jupyter.notebook.ipynb"
  },
  "workbench.tree.expandMode": "doubleClick",
  "vsicons.dontShowNewVersionMessage": true,
  "problems.decorations.enabled": false,
  "window.autoDetectColorScheme": false,
  "zenMode.hideTabs": false,
  "window.title": "${activeEditorFull}${separator}${rootName}",
  "editor.fontSize": 14,
  "editor.fontLigatures": true,
  "editor.codeActionsOnSave": {},
  "editor.find.seedSearchStringFromSelection": "selection",
  "editor.scrollBeyondLastLine": false,
  "editor.tabSize": 4,
  "editor.useTabStops": true,
  "editor.snippetSuggestions": "top",
  "editor.formatOnSave": false,
  "editor.formatOnSaveMode": "file",
  "editor.formatOnPaste": false,
  "editor.renderWhitespace": "selection",
  "editor.find.cursorMoveOnType": true,
  "editor.rulers": [120],
  "editor.minimap.enabled": false,
  "editor.linkedEditing": true,
  "explorer.confirmDragAndDrop": false,
  "explorer.confirmDelete": false,
  "editor.unicodeHighlight.ambiguousCharacters": false,
  "editor.bracketPairColorization.enabled": false,
  "diffEditor.renderSideBySide": true,
  "editor.stickyScroll.enabled": false,
  "editor.autoClosingBrackets": "never",
  "files.autoSave": "onFocusChange",
  "workbench.layoutControl.enabled": false,
  "editor.fontFamily": "'JetBrainsMono Nerd Font Mono', 'Julia Mono', 'Cascadia Code', 'Fira Code', 'IBM Plex Mono', 'Input Mono', 'Source Code Pro'",
  "gitlens.hovers.currentLine.over": "line",
  "gitlens.codeLens.enabled": false,
  "workbench.colorTheme": "poimandres-noitalics-storm",
  "window.zoomLevel": 0.0,

  // git
  "git.autofetch": true,
  "git.enableSmartCommit": true,
  "git.confirmSync": false,
  "git.mergeEditor": true,

  // Go
  // https://github.com/golang/tools/blob/master/gopls/doc/vscode.md
  "go.useLanguageServer": true,
  "[go]": {
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": true
    },
    // Optional: Disable snippets, as they conflict with completion ranking.
    "editor.snippetSuggestions": "bottom"
  },
  "[go.mod]": {
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": true
    }
  },
  "go.buildOnSave": "package",
  "go.lintOnSave": "package",
  "go.vetOnSave": "package",
  "go.buildTags": "",
  "go.buildFlags": [],
  "go.lintTool": "golangci-lint",
  "go.lintFlags": [],
  "go.vetFlags": [],
  "go.addTags": {
    "tags": "json",
    "options": "json=omitempty",
    "promptForTags": true,
    "transform": "snakecase"
  },
  "go.coverOnSave": false,
  "go.useCodeSnippetsOnFunctionSuggest": false,
  "go.formatTool": "goimports",
  "go.gopath": "~",
  "go.gocodeAutoBuild": false,

  // Python
  "[python]": {
    "editor.formatOnSave": true
  },
  "python.languageServer": "Pylance",
  "python.analysis.typeCheckingMode": "strict",
  "python.linting.lintOnSave": true,
  "python.linting.prospectorEnabled": true,
  "python.linting.prospectorPath": "prospector",
  "python.linting.prospectorArgs": [
    "--max-line-length",
    "120",
    "--ignore-paths",
    ".venv"
  ],
  "python.formatting.provider": "black",
  "python.formatting.blackPath": "black",
  "python.formatting.blackArgs": ["--line-length", "120"],

  // Frontend
  "auto-close-tag.enableAutoCloseTag": true,
  "auto-close-tag.activationOnLanguage": [
    "html",
    "django-html",
    "vue",
    "typescriptreact",
    "javascriptreact",
    "jinja"
  ],
  "emmet.includeLanguages": {
    "django-html": "html",
    "jinja": "html"
  },
  "emmet.triggerExpansionOnTab": true,
  "emmet.showSuggestionsAsSnippets": true,
  "[javascript]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[vue]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "volar.inlayHints.eventArgumentInInlineHandlers": false,
  "[javascriptreact]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // vim
  // https://github.com/Microsoft/vscode/issues/23991
  "keyboard.dispatch": "keyCode",
  "vim.autoSwitchInputMethod.enable": true,
  "vim.autoSwitchInputMethod.defaultIM": "com.apple.keylayout.US",
  "vim.autoSwitchInputMethod.obtainIMCmd": "/opt/homebrew/bin/im-select",
  "vim.autoSwitchInputMethod.switchIMCmd": "/opt/homebrew/bin/im-select {im}",
  "vim.easymotion": true,
  "vim.incsearch": true,
  "vim.useSystemClipboard": true,
  "vim.useCtrlKeys": true,
  "vim.hlsearch": true,
  "vim.sneak": true,
  "vim.normalModeKeyBindings": [
    {
      "before": ["<leader>", "b"],
      "commands": ["goToNextReference"]
    },
    {
      "before": ["<leader>", "/"],
      "commands": ["editor.action.commentLine"]
    },
    //   "before": ["<tab>"],
    //   "commands": ["workbench.action.nextEditorInGroup"]
    // },
    // {
    //   "before": ["<S-tab>"],
    //   "commands": ["workbench.action.previousEditorInGroup"]
    // },
    {
      "before": ["<C-l>"],
      "commands": ["workbench.action.navigateRight"]
    },
    {
      "before": ["<C-h>"],
      "commands": ["workbench.action.navigateLeft"]
    },
    {
      "before": ["<C-j>"],
      "commands": ["workbench.action.navigateDown"]
    },
    {
      "before": ["<C-k>"],
      "commands": ["workbench.action.navigateUp"]
    },
    {
      "before": ["<leader>", "]"],
      "commands": ["workbench.action.navigateForward"]
    },
    {
      "before": ["<leader>", "["],
      "commands": ["workbench.action.navigateBack"]
    },
    {
      "before": ["<leader>", "backspace"],
      "commands": ["workbench.action.navigateToLastEditLocation"]
    }
  ],
  "vim.insertModeKeyBindings": [
    {
      "before": ["j", "k"],
      "after": ["<Esc>"]
    },
    {
      "before": ["<C-j>"],
      "after": ["<Esc>"]
    },
    {
      "before": ["<C-k>"],
      "after": ["<Esc>"]
    }
  ],
  "vim.visualModeKeyBindings": [
    {
      "before": [">"],
      "after": [">", "g", "v"]
    },
    {
      "before": ["<"],
      "after": ["<", "g", "v"]
    },
    {
      "before": ["<leader>", "/"],
      "commands": ["editor.action.commentLine"]
    }
  ],
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["<leader>", "d"],
      "after": ["d", "d"]
    },
    {
      "before": ["<C-/>"],
      "commands": [":nohl"]
    },
    {
      "before": ["<leader>", "e"],
      "commands": ["workbench.action.toggleSidebarVisibility"]
    },
    {
      "before": ["<leader>", "f"],
      "commands": ["revealInExplorer"]
    }
  ],
  "vim.leader": "<space>",
  "vim.enable": false,
  "terminal.integrated.scrollback": 10000,
  "terminal.integrated.persistentSessionScrollback": 300,
}
