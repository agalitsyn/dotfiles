{
    "editor.fontFamily": "Source Code Pro, FiraCode-Retina, Hack, Go Mono, Menlo, Monaco",
    "editor.fontLigatures": true,
    "editor.fontSize": 12,
    "editor.renderWhitespace": "none",
    "editor.rulers": [79, 120],
    "editor.minimap.enabled": false,
    "terminal.integrated.shell.osx": "/bin/zsh",
    "terminal.integrated.shell.linux": "/bin/zsh",
    "terminal.external.osxExec": "iTerm.app",
    "terminal.external.linuxExec": "x-terminal-emulator",
    "go.buildOnSave": "package",
    "go.lintOnSave": "package",
    "go.vetOnSave": "package",
    "go.buildTags": "",
    "go.buildFlags": [],
    "go.lintTool": "megacheck",
    "go.lintFlags": [],
    "go.vetFlags": [],
    "go.addTags": {
        "tags": "json",
        "options": "json=omitempty",
        "promptForTags": true,
        "transform": "snakecase"
    },
    "go.coverOnSave": false,
    "go.useCodeSnippetsOnFunctionSuggest": false,
    "go.formatOnSave": true,
    "go.formatTool": "goreturns",
    "go.gopath": "~",
    "go.gocodeAutoBuild": false,
    //https://github.com/Microsoft/vscode/issues/1896
    "window.zoomLevel": 0,
    "workbench.iconTheme": "material-icon-theme",
    "material-icon-theme.showUpdateMessage": false,
    "workbench.colorCustomizations": {
        "statusBar.background": "#242424",
        "statusBar.noFolderBackground": "#242424",
        "statusBar.debuggingBackground": "#242424"
    },
    "extensions.autoUpdate": false,
    "update.channel": "none"
}
