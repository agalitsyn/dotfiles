[
  // These keybindings are mix between vscode, vim and intellij

  // File explorer
  // Enter to select
  {
    "key": "enter",
    "command": "-renameFile",
    "when": "filesExplorerFocus"
  },
  {
    "key": "enter",
    "command": "list.select",
    "when": "listFocus && !inputFocus"
  },
  // Reveal in explorer
  {
    "key": "cmd+b",
    "command": "-workbench.action.toggleSidebarVisibility",
  },
  {
    "key": "cmd+b",
    "command": "workbench.files.action.showActiveFileInExplorer",
    "when": "editorTextFocus",
  },
  {
    "key": "cmd+b",
    "command": "workbench.action.toggleSidebarVisibility",
    "when": "filesExplorerFocus"
  },

  // Telescope style grep as default search
  {
    "key": "shift+cmd+f",
    "command": "-workbench.action.findInFiles"
  },
  {
    "key": "shift+cmd+f",
    "command": "workbench.action.quickTextSearch"
  },
  {
    "key": "cmd+k cmd+f",
    "command": "workbench.action.findInFiles",
  },

  // Vim-style tree actions
  {
    "key": "m",
    "command": "renameFile",
    "when": "filesExplorerFocus && !inputFocus"
  },
  {
    "key": "d",
    "command": "deleteFile",
    "when": "filesExplorerFocus && !inputFocus"
  },
  {
		"key": "a",
		"command": "explorer.newFile",
		"when": "filesExplorerFocus && !inputFocus"
	},
	{
		"key": "shift+a",
		"command": "explorer.newFolder",
		"when": "filesExplorerFocus && !inputFocus"
  },
  {
		"key": "shift+s",
		"command": "explorer.openToSide",
		"when": "filesExplorerFocus && !inputFocus"
	},
  // Win style
  {
    "key": "f2",
    "command": "renameFile",
    "when": "filesExplorerFocus && !inputFocus"
  },

  // Intellij-style quick actions
  {
		"key": "alt+enter",
		"command": "editor.action.quickFix",
		"when": "editorHasCodeActionsProvider && editorTextFocus && !editorReadonly"
	},
	{
		"key": "alt+enter",
		"command": "workbench.action.terminal.quickFix",
		"when": "terminalFocus && terminalProcessSupported"
	},
	{
		"key": "alt+enter",
		"command": "problems.action.showQuickFixes",
		"when": "problemFocus"
	},

  // Intellij-style navigation
  {
    "key": "cmd+[",
    "command": "workbench.action.navigateBack",
  },
  {
    "key": "cmd+]",
    "command": "workbench.action.navigateForward",
  },
  {
    "key": "cmd+e",
    "command": "workbench.action.showAllEditorsByMostRecentlyUsed",
  },
  {
    "key": "shift+cmd+backspace",
    // "command": "workbench.action.navigateToLastEditLocation",
    // "command": "workbench.action.navigatePreviousInEditLocations",
    // "command": "workbench.action.editor.previousChange",
    // This is proper behaviour:
    "command": "workbench.action.navigateBackInEditLocations",
  },
  {
    "key": "cmd+r",
    "command": "workbench.action.gotoSymbol",
  },

  // Vim-style navigation
  {
    "key":"cmd+shift+5",
    "command": "editor.emmet.action.matchTag"
  },

  // Panes
  {
    "key": "cmd+k cmd+m",
    "command": "-workbench.action.toggleMaximizedPanel",
  },
  {
    "key": "cmd+k cmd+m",
    "command": "workbench.action.toggleMaximizedPanel",
    "when": "terminalFocus"
  },
  {
    "key": "cmd+k cmd+m",
    "command": "workbench.action.toggleMaximizeEditorGroup",
    "when": "editorTextFocus",
  },

  {
    "key": "cmd+k cmd+r",
    "command": "workbench.action.evenEditorWidths",
  },
  {
    "key": "shift+cmd+\\",
    "command": "workbench.action.splitEditorToBelowGroup"
  },

  {
    "key": "shift+cmd+w",
    "command": "-workbench.action.closeWindow"
  },
  {
    "key": "alt+cmd+t",
    "command": "-workbench.action.closeOtherEditors"
  },
  {
    "key": "shift+cmd+w",
    "command": "workbench.action.closeOtherEditors"
  },
  {
    "key": "cmd+k cmd+w",
    "command": "workbench.action.closeAllEditors"
  },

  // macOS clear screen
  // https://code.visualstudio.com/docs/terminal/advanced#_macos-clear-screen
  {
    "key": "cmd+k",
    "command": "-workbench.action.terminal.clear"
  },
  {
    "key": "cmd+k",
    "command": "workbench.action.terminal.clear",
    "when": "terminalFocus && terminalHasBeenCreated || terminalFocus && terminalProcessSupported"
  },

  // Open lazygit in terminal
  {
    "key": "cmd+k cmd+g",
    "command": "workbench.action.tasks.runTask",
    "args": "lazygit"
  }
]
